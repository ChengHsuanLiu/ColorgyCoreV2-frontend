            <a href="#">
              <div class="profile">
                <%= image_tag('profile-pic.jpg') %>
                <span class="profile-name">劉政軒</span>
              </div>
            </a>
          </li>
        </ul>
        <ul class="side-nav" id="mobile-demo">
          <div class="side-nav-profile">
            <div class="profile-pic">
              <%= image_tag('profile-pic.jpg') %>
            </div>
            <div class="profile-name">
