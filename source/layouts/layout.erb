          <hr>
          <li><a href="#">LOG OUT</a></li>
          <ul>
            <li><a href=""></a></li>
            <li><a href=""></a></li>
          </ul>
        </ul>
      </div>
    </nav>
    <%= yield %>
    <%= javascript_include_tag  "main" %>
    <script>
      $(document).ready(function(){
        $(".button-collapse").sideNav();
      })
    </script>
  </body>
</html>
